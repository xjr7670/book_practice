<Window x:Class="KaliCards.Gui.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KaliCards.Gui"
        mc:Ignorable="d"
        Title="AboutWindow" Height="300" Width="434" MinHeight="300" MinWidth="434" ResizeMode="CanResizeWithGrip">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="58"/>
            <RowDefinition Height="40"/>
            <RowDefinition />
            <RowDefinition Height="42"/>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0" Background="#C40D42">
            <Image Height="56" Canvas.Left="0" Canvas.Top="0" Width="100" Stretch="UniformToFill" Source="Banner.png" />
            <Label Content="Karli Cards" Canvas.Right="10" Canvas.Top="25" Foreground="#FFF7EFEF" FontFamily="Times New Roman" />
        </Canvas>
        <Canvas Grid.Row="1" Background="Black">
            <Label Content="Karli Cards (c) Copyright 2012 by Wrox Press and all readers" Canvas.Left="5" Canvas.Top="10" FontWeight="Bold" FontFamily="Arial" Foreground="White" />
        </Canvas>
        <Canvas Grid.Row="3">
            <Button Content="_OK" Canvas.Right="12" Canvas.Bottom="10" Width="75" Click="Button_Click" />
        </Canvas>
        <StackPanel  Grid.Row="2">
            <Label Content="CardLib and Idea develped by Karli Watson" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="20,20,0,0" FontWeight="Bold" Foreground="#FF8B6F6F"/>
            <Label Content="Graphical User Interface developed by Jacob Hammer" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="20,0,0,0" FontWeight="Bold" Foreground="#8B6F6F"/>
            <TextBlock TextWrapping="Wrap" Text="Karli Cards developed with C# 7 for Worx Press. You can visit Wrox Press at http://wwww.wrox.com." Margin="0,10,0,0" Padding="20,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="39"/>
        </StackPanel>
    </Grid>
</Window>
