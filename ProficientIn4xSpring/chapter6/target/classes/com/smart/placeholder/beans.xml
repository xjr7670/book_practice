<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
    <bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
        <property name="customEditors">
            <map>
                <!-- 属性编辑器对应的属性类型 -->
                <entry key="com.smart.editor.Car" value="com.smart.editor.CustomCarEditor"></entry>
            </map>
        </property>
    </bean>
    <bean id="boss" class="com.smart.editor.Boss">
        <property name="name" value="John" />
        <!-- 该属性将使用前处的属性编辑器完成属性填充操作 -->
        <property name="car" value="红旗CA72,200,20000.00"/>
    </bean>

    <bean class="com.smart.placeholder.EncryptPropertyPlaceholderConfigurer"
          p:location="classpath:com/smart/placeholder/jdbc.properties" p:fileEncoding="utf-8" />
    <!-- 通过属性名引用属性值 -->
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
          destroy-method="close"
          p:driverClassName="${driverClassName}"
          p:url="${url}"
          p:username="${userName}"
          p:password="${password}" />
</beans>